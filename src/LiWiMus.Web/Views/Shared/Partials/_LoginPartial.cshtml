@using Microsoft.AspNetCore.Identity
@using LiWiMus.Core.Entities
@inject SignInManager<User> _signInManager
@inject UserManager<User> _userManager

<ul class="navbar-nav">
    @if (_signInManager.IsSignedIn(User))
    {
        var currentUser = await _userManager.GetUserAsync(User);
        <li class="nav-item">
            <img src="~/@currentUser.AvatarPath" alt="" class="img-fluid" style="width: 50px">
            <a class="nav-link text-white d-inline-block" title="Manage" asp-controller="Profile" asp-action="Index">Личный кабинет</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>