@model LiWiMus.Web.Areas.User.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<section>
    <form asp-area="User" asp-controller="Profile" asp-action="ChangePassword" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
    
        <label asp-for="OldPassword" class="control-label">Старый пароль</label>
        <span asp-validation-for="OldPassword"></span>
        <input asp-for="OldPassword" class="form-control"/>
    
        <label asp-for="NewPassword" class="control-label">Новый пароль</label>
        <span asp-validation-for="OldPassword"></span>
        <input asp-for="NewPassword" class="form-control"/>
    
        <input type="submit" value="Сохранить"/>
    </form>
</section>