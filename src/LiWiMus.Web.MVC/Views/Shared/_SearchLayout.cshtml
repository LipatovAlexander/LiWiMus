@using LiWiMus.Web.MVC.Areas.Search.ViewModels

@{
    Layout = "_Layout";
}

<h1 class="text-white text-center mt-3 mb-2">Tracks</h1>

<div>
    <section class="mb-3">
        <form method="get"
              asp-action="ShowMore"
              id="form-search" class="track-form-search w-75" style="margin: 0 auto">
            <input type="text" class="form-control" name="@nameof(SearchViewModel.Title)" placeholder="Search track">
            <input type="hidden" name="@nameof(SearchViewModel.Page)" id="input-page-search" value="2">
        </form>
    </section>
    
    <section class="track-section" style="margin: 0 auto">
        <div class="p-3" id="search-items" >
            @RenderBody()
        </div>
    </section>
    
    <section class="m-3" style="text-align: center">
        <button form="form-search" class="m-3 show-more-button" style="min-width: 15%; max-width: 80%">Show more</button>
    </section>
</div>


@section Scripts
{
    <script src="~/js/search.js"></script>
}
