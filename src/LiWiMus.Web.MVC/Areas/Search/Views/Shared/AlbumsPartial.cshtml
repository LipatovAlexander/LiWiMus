@using LiWiMus.Web.MVC.Models
@using Microsoft.Extensions.Options
@model System.Collections.Generic.IEnumerable<LiWiMus.Web.MVC.ViewModels.ForListViewModels.AlbumForListViewModel>



@{
    Layout = null;
}

<div class="albums">
    @foreach (var album in Model)
    {
        <a asp-area="Music" asp-controller="Album" asp-action="Index" asp-route-albumId="@album.Id">
            <div class="album-container search-item">
                <p class="album-title">@album.Title</p>
                <img class="album-cover" src="@System.IO.Path.Combine(ViewData["fileServer"]?.ToString()!, album.CoverLocation)" alt="Album cover." width="150px" height="150px" />
                <p class="album-artists">@string.Join("&", album.Owners.Select(x => x.Name))</p>
                <p class="album-date">@album.PublishedAt</p>
            </div>
        </a>
    }
</div>
