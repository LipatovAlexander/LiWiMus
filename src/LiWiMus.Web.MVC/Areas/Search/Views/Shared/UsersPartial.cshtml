@model System.Collections.Generic.IEnumerable<LiWiMus.Web.MVC.ViewModels.ForListViewModels.UserForListViewModel>

<div class="users">
    @foreach (var user in Model)
    {
        <a asp-area="User" asp-controller="Profile" asp-action="Index" asp-route-username="@user.UserName">

            <div class="user-container search-item">
                <div class="user-image-container">
                    @if (user.AvatarLocation != null)
                    {
                        <img class="user-image" src="@System.IO.Path.Combine(ViewData["fileServer"]?.ToString()!, user.AvatarLocation)" alt="User avatar."/>
                    }
                    else
                    {
                        <img class="user-image" src="../images/main-background.jpg" alt="User avatar."/>
                    }
                </div>
                <div class="user-information">
                    <p class="user-name">@user.UserName</p>
                </div>
            </div>
        </a>
    }
</div>