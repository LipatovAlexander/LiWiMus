@model LiWiMus.Web.MVC.Areas.Music.ViewModels.PlaylistViewModel

@{
    ViewBag.Title = "title";
    Layout = "_LayoutSidebar";
}

<section>
    <form asp-formhelper="true" asp-area="User" asp-controller="Playlist" asp-action="SubscribeOrUnsubscribe">
        <input type="hidden" value="@Model.Id" name="playlistId">
        <button>Like</button>
    </form>
</section>

<section>
    <h3>
        @Model.Name
    </h3>
    <a asp-area="User"
       asp-controller="Profile"
       asp-action="Index"
       asp-route-userName="@Model.Owner.UserName">
        Owner: @Model.Owner.UserName
    </a>
    
    <div>
        Count Subscribers: @Model.CountSubscribers
    </div>
    
    @foreach (var e in Model.Tracks)
    {
        <div>
            @e.Name
        </div>
        
        <div>
            <a href="#">@e.Album.Title</a>  
        </div>
        
        <div>
            @foreach (var genre in e.Genres)
            {
                <p>
                    @genre
                </p>
            }
        </div>
        
        <div>
            @foreach (var owner in e.Owners)
            {
                <p>
                    <a href="#">@owner.Name</a>  
                </p>
            }
        </div>
    }
</section>

<div class="wrapper">
    <div class="top-bar">
        <i class="material-icons">
            download
        </i>

        <i id="song-lyrics-btn" class="material-icons ">
            article
        </i>
        <div class="song-lyrics">
            <div class="header">
                <i id="close-lyrics" class="material-icons">highlight_off</i>
            </div>
            <p>
                текст песни
            </p>
        </div>

        <i class="material-icons">more_horiz</i>
    </div>
    <div class="img-area">
        <img src="" alt="">
    </div>
    <div class="song-details">
        <p class="name"></p>
        <p class="artist"></p>
    </div>
    <div class="progress-area">
        <div class="progress-bar">
            <audio id="main-audio" src=""></audio>
        </div>
        <div class="song-timer">
            <span class="current-time">0:00</span>
            <span class="max-duration">0:00</span>
        </div>
    </div>
    <div class="controls">
        <!--<i id="repeat-plist" class="material-icons" title="Playlist looped">repeat</i>-->
        <div class="fav-btn" >
            <i class="material-icons favorite-button" style="font-size: 36px">favorite_border</i>
        </div>
        <i id="prev" class="material-icons">skip_previous</i>
        <div class="play-pause">
            <i class="material-icons play">play_arrow</i>
        </div>
        <i id="next" class="material-icons">skip_next</i>
        <i id="more-music" class="material-icons">queue_music</i>
    </div>
    
    <div class="music-list">
        <div class="header">
            <i id="close" class="material-icons">highlight_off</i>
        </div>
        <ul>
            <!-- here li list are coming from js -->
        </ul>
    </div>
</div>
